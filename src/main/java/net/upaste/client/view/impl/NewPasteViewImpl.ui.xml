<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:a="urn:import:net.upaste.client.component">
	<ui:style>
    .container {
        width: 100%;
        height: 100%;
    }
    .content {
        width: 95%;
        height: 400px;
    }
	</ui:style>
	<g:HorizontalPanel styleName="{style.container}">
		<g:cell>
			<a:RecentPasteList ui:field="recentPasteList"/>
		</g:cell>
		<g:cell>
			<g:FormPanel ui:field="pasteForm" method="get">
				<g:FlowPanel>
					<g:TextArea ui:field="content" styleName="{style.content}"></g:TextArea>
                    <g:HTML><br/></g:HTML>
					<g:InlineLabel>Title</g:InlineLabel>
					<g:TextBox ui:field="title"></g:TextBox>
					<g:InlineLabel>Email</g:InlineLabel>
					<g:TextBox ui:field="email"></g:TextBox>
					<g:InlineLabel>Private</g:InlineLabel>
					<g:CheckBox ui:field="isPrivate"></g:CheckBox>
					<g:SubmitButton>Paste &raquo;</g:SubmitButton>
				</g:FlowPanel>
			</g:FormPanel>
		</g:cell>
	</g:HorizontalPanel>
</ui:UiBinder>