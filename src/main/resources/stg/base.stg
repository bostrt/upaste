base(recentList, contextObject="") ::= <<
<html>
<head>
$baseHead()$
</head>

<body>
<table>
	<tr>
		<td colspan=2 id="title-cell">
			<div id="title-text"><a href="/">uPaste<span id="alpha">alpha</span></a></div>
			<hr />
		</td>
	</tr>
$contentRow(recentList, contextObject)$	
</table>

</body>
</html>
>>

contentRow(recentList, contextObject) ::= <<
	<tr>
		<td id="recent-pastes-cell" class="in-content-row">
			<div id="recent-pastes-container">
				$recentPastes(recentList)$
			</div>		
		</td>
		<td id="content-cell" class="in-content-row">
			<div id="content-container">
$content(contextObject)$
			</div>
		</td>
	</tr>
>>

content(contextObject) ::= <<
>>

baseHead() ::= <<
	<link rel="stylesheet" type="text/css" href="/static/style.css"/>
	<script type="text/javascript" src="/static/js/jquery-1.8.1.min.js"></script>
	<script type="text/javascript" src="/static/js/base.js"></script>
	<title>uPaste | Alpha</title>
	$head()$
>>

recentPastes(recentList) ::= <<
	<div id="recent-pastes-title">
		Recent Pastes
	</div>
	$recentList:{ paste | $recentPaste(paste)$ }$
>>

recentPaste(paste) ::= <<
	<div class="recent-paste-link" href="/paste/$paste.uuid$">
		$paste.title$
		<br/>
		<span class="nice-time-little">$paste.niceTime$</span>
	</div>
>>

head() ::= <<
>>